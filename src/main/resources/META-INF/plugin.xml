<idea-plugin url="https://goodforgod.github.io/DummyMapper/">
    <id>com.github.goodforgod.dummymapper</id>
    <name>DummyMapper</name>
    <vendor email="goodforgod.dev@gmail.com" url="https://github.com/GoodforGod">Anton Kurako (GoodforGod)</vendor>

    <version>0.9.0-SNAPSHOT</version>
    <description><![CDATA[
        <h1>DummyMapper</h1>
        <br/>
        <a href="https://github.com/GoodforGod/DummyMapper">GitHub</a> |
        <a href="https://github.com/GoodforGod/DummyMapper/issues">Issues</a> |
        <br/>
        <br/>
        <b>DummyMapper</b> is a plugin for mapping JAVA POJO files to supported formats such as JSON, JSON Schema, AVRO Schema, etc.
        <br/>
        Plugin supports mapping to formats:
        <ul>
            <li>JSON</li>
            <li>JSON Schema</li>
            <li>AVRO Schema</li>
        </ul>
        <br/>
    ]]></description>
    <change-notes><![CDATA[
        Initial release of the plugin.
    ]]></change-notes>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <depends>com.intellij.modules.java</depends>
    <!--    <idea-version since-build="183" until-build="183.*"/>-->

    <actions>
        <group id="org.intellij.sdk.action.GroupedActions"
               text="Mapping Options.."
               popup="true"
               icon="AllIcons.Actions.DiffWithClipboard">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
            <action id="DummyMapper.JsonExample"
                    class="io.goodforgod.dummymapper.JsonMapperEntry"
                    text="Map as JSON"
                    description="Copy JSON to clipboard">
            </action>
            <action id="DummyMapper.JsonSchema"
                    class="io.goodforgod.dummymapper.JsonSchemaMapperEntry"
                    text="Map as JSON Schema"
                    description="Copy JSON Schema to clipboard">
            </action>
            <action id="DummyMapper.AvroSchema"
                    class="io.goodforgod.dummymapper.AvroSchemaMapperEntry"
                    text="Map as AVRO Schema"
                    description="Copy AVRO Schema to clipboard">
            </action>
        </group>
    </actions>
</idea-plugin>