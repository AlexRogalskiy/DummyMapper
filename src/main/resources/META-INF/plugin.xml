<idea-plugin>
    <id>com.github.goodforgod.dummymapper</id>
    <name>DummyMapper</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <group id="org.intellij.sdk.action.GroupedActions"
               text="Map Options"
               popup="true"
               icon="AllIcons.Actions.DiffWithClipboard">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
            <action id="DummyMapper.JsonExample"
                    class="io.goodforgod.dummymapper.JsonMapperEntry"
                    text="Map as JSON"
                    description="Copy JSON to clipboard">
            </action>
            <action id="DummyMapper.JsonSchema"
                    class="io.goodforgod.dummymapper.JsonSchemaMapperEntry"
                    text="Map as JSON Schema"
                    description="Copy JSON Schema to clipboard">
            </action>
            <action id="DummyMapper.AvroSchema"
                    class="io.goodforgod.dummymapper.AvroSchemaMapperEntry"
                    text="Map as AVRO Schema"
                    description="Copy AVRO Schema to clipboard">
            </action>
        </group>
    </actions>
</idea-plugin>